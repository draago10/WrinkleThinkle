<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.ShopFragment" android:id="@+id/ShopFragment">
    <ImageView
            android:contentDescription="@string/trees_bg_blur_description"
            android:src="@drawable/flower_click_fragment_trees_bg_blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_background"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
            android:scaleType="centerCrop"/>

    <ImageView
            android:contentDescription="@string/shelves_image_description"
            android:layout_width="410dp"
            android:layout_height="660dp"
            android:id="@+id/shelves_background"
            android:background="@drawable/shelves_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />
    <ImageView
            android:contentDescription="@string/navbar_background_description"
            android:layout_width="409dp"
            android:layout_height="175dp" android:id="@+id/navbar_icon"
            android:background="@drawable/poop_log"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:contentDescription="@string/shop_sign_image_description"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:id="@+id/shop_sign"
            android:background="@drawable/icon_shop_sign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/shelves_background"
            app:layout_constraintTop_toBottomOf="@+id/sell_flowers" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="1.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="175dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="4"
            android:id="@+id/navbar"
            android:gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:background="@drawable/poop_log"
            android:foregroundGravity="center_horizontal"
            tools:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/shop_icon"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_shop"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp" android:contentDescription="@string/shop_icon_description"/>

        <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_grow"
                android:id="@+id/grow_icon"
                android:scaleType="centerCrop" android:contentDescription="@string/grow_icon_description"/>

        <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_inventory"
                android:id="@+id/icon_inventory"
                android:scaleType="centerCrop" android:contentDescription="@string/inventory_icon_description"/>

        <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:id="@+id/icon_map"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_map"
                android:scaleType="centerCrop" android:contentDescription="@string/map_icon_description"/>
    </LinearLayout>

    <ImageButton
            android:contentDescription="@string/house_image_button_description"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/home_button"
            android:src="@drawable/inside_house_icon"
            android:scaleType="centerCrop"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="10"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/fertilizer_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/seeds" android:layout_marginBottom="200dp"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toStartOf="@+id/pesticide_pricetag"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="50"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/rose_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" app:layout_constraintTop_toBottomOf="@+id/seeds"
            android:layout_marginTop="4dp"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="75"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/tulip_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/pesticide_pricetag" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/seeds" android:layout_marginEnd="124dp"
            app:layout_constraintVertical_bias="0.806"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="150"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/dahlia_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/rose_pricetag"
            app:layout_constraintEnd_toStartOf="@+id/lily_pricetag"
            app:layout_constraintTop_toBottomOf="@+id/seeds"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.456"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="100"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/lily_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toBottomOf="@+id/seeds" android:layout_marginTop="4dp"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="30"
            android:layout_width="75dp"
            android:layout_height="50dp" android:id="@+id/pesticide_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="@+id/main_background"
            app:layout_constraintBottom_toTopOf="@+id/seeds" android:layout_marginBottom="200dp"/>
    <ImageButton
            android:contentDescription="@string/fertilizer_image_icon_description"
            android:layout_width="59dp"
            android:layout_height="65dp" android:id="@+id/purchase_fertilizer"
            android:background="@drawable/icon_fertilizer"
            app:layout_constraintTop_toTopOf="@+id/shelves_background"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/purchase_pesticide" app:layout_constraintHorizontal_bias="0.398"
            app:layout_constraintBottom_toTopOf="@+id/fertilizer_pricetag" app:layout_constraintVertical_bias="0.588"/>
    <ImageButton
            android:contentDescription="@string/pesticide_image_icon_description"
            android:layout_width="53dp"
            android:layout_height="58dp" android:id="@+id/purchase_pesticide"
            android:background="@drawable/icon_pesticide"
            app:layout_constraintTop_toTopOf="@+id/shelves_background"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
            app:layout_constraintBottom_toTopOf="@+id/pesticide_pricetag" app:layout_constraintVertical_bias="0.562"/>
    <ImageView
            android:contentDescription="@string/coin_image_icon_description"
            android:src="@drawable/icon_coin"
            android:layout_width="53dp"
            android:layout_height="49dp" android:id="@+id/coin_icon"
            app:layout_constraintBottom_toTopOf="@+id/shelves_background"
            app:layout_constraintTop_toTopOf="@+id/main_background"
            app:layout_constraintVertical_bias="0.024"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coin_balance"
            app:layout_constraintTop_toTopOf="@+id/main_background"
            app:layout_constraintBottom_toTopOf="@+id/shelves_background"
            android:textSize="34sp"
            app:layout_constraintVertical_bias="0.076"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/coin_icon"
            android:layout_marginEnd="4dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="302dp"
            android:layout_height="103dp"
            android:weightSum="3" android:divider="@android:drawable/divider_horizontal_dim_dark"
            android:id="@+id/seeds" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.587"
            app:layout_constraintTop_toTopOf="@+id/shelves_background" android:layout_marginTop="364dp">
        <ImageButton
                android:contentDescription="@string/seeds_icon_description"
                android:layout_width="63dp"
                android:layout_height="72dp" android:id="@+id/purchase_rose"
                android:background="@drawable/seeds_rose"
                android:layout_weight="1" android:layout_margin="20dp"/>
        <ImageButton
                android:contentDescription="@string/seeds_icon_description"
                android:layout_width="63dp"
                android:layout_height="72dp" android:id="@+id/purchase_dahlia"
                android:background="@drawable/seeds_dahlia"
                android:layout_weight="1" android:layout_margin="20dp"/>
        <ImageButton
                android:contentDescription="@string/seeds_icon_description"
                android:layout_width="63dp"
                android:layout_height="72dp" android:id="@+id/purchase_lily"
                android:background="@drawable/seeds_lily"
                android:layout_weight="1" android:layout_margin="20dp"/>
    </LinearLayout>
    <ImageButton
            android:contentDescription="@string/seeds_icon_description"
            android:layout_width="63dp"
            android:layout_height="72dp" android:id="@+id/purchase_tulip"
            android:background="@drawable/seeds_tulip"
            android:layout_weight="1" android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/seeds"
            app:layout_constraintEnd_toStartOf="@+id/tulip_pricetag"
            app:layout_constraintTop_toBottomOf="@+id/fertilizer_pricetag" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:src="@drawable/edit_text_background"
            android:layout_width="224dp"
            android:layout_height="85dp" android:id="@+id/sell_flowers"
            android:scaleType="centerCrop" android:backgroundTint="#00FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/coin_balance"
            app:layout_constraintStart_toEndOf="@+id/home_button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.531" android:layout_marginTop="52dp"
            android:contentDescription="@string/sell_button_icon_description"
            tools:contentDescription="@tools:sample/lorem"/>
    <TextView
            android:text="SELL FLOWERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="23sp"
            app:layout_constraintTop_toTopOf="@+id/sell_flowers"
            app:layout_constraintBottom_toBottomOf="@+id/sell_flowers" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/sell_flowers"
            app:layout_constraintStart_toStartOf="@+id/sell_flowers" app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintVertical_bias="0.0" android:textColor="#000000"
            android:fontFamily="@font/pixelify_sans"/>
</androidx.constraintlayout.widget.ConstraintLayout>