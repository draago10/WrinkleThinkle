<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.ShopFragment">
    <ImageView
            android:contentDescription="@string/trees_bg_blur_description"
            android:src="@drawable/flower_click_fragment_trees_bg_blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_background"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:contentDescription="@string/shelves_image_description"
            android:layout_width="730dp"
            android:layout_height="860dp" android:id="@+id/shelves_background"
            android:background="@drawable/shelves_background"
            app:layout_constraintTop_toTopOf="@+id/main_background" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <ImageView
            android:contentDescription="@string/navbar_background_description"
            android:layout_width="410dp"
            android:layout_height="446dp" android:id="@+id/navbar_icon"
            android:background="@drawable/navbar_background"
            android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="@+id/main_background"
            android:layout_marginTop="440dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.04000002"/>
    <ImageView
            android:contentDescription="@string/shop_sign_image_description"
            android:src="@drawable/icon_shop_sign"
            android:layout_width="527dp"
            android:layout_height="315dp" android:id="@+id/shop_sign"
            app:layout_constraintBottom_toTopOf="@+id/navbar_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="160dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/navbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/navbar_icon" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.83">
        <ImageButton
                android:contentDescription="@string/map_icon_description"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/map_icon" android:layout_weight="1"
                android:background="@drawable/icon_map"
        />
        <ImageButton
                android:contentDescription="@string/grow_icon_description"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/grow_icon" android:layout_weight="1"
                android:background="@drawable/icon_grow"
        />
        <ImageButton
                android:contentDescription="@string/inventory_icon_description"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/inventory_icon" android:layout_weight="1"
                android:background="@drawable/icon_inventory"
        />
        <ImageButton
                android:contentDescription="@string/shop_icon_description"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/shop_icon" android:layout_weight="1"
                android:background="@drawable/icon_shop"
        />
    </LinearLayout>
    <ImageButton
            android:contentDescription="@string/house_image_button_description"
            android:layout_width="114dp"
            android:layout_height="100dp" android:id="@+id/home_button"
            android:background="@drawable/inside_house_icon"
            app:layout_constraintTop_toTopOf="@+id/main_background" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:contentDescription="@string/fertilizer_image_icon_description"
            android:layout_width="106dp"
            android:layout_height="110dp" android:id="@+id/purchase_fertilizer"
            android:background="@drawable/fertilizer"
            app:layout_constraintTop_toTopOf="@+id/main_background"
            app:layout_constraintBottom_toTopOf="@+id/navbar_icon"
            app:layout_constraintVertical_bias="0.543" app:layout_constraintStart_toStartOf="@+id/main_background"
            app:layout_constraintEnd_toEndOf="@+id/main_background" app:layout_constraintHorizontal_bias="0.803"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="80"
            android:layout_width="130dp"
            android:layout_height="103dp" android:id="@+id/fertilizer_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            app:layout_constraintStart_toStartOf="@+id/main_background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.829" app:layout_constraintTop_toTopOf="@+id/shelves_background"
            android:layout_marginTop="168dp" android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="45"
            android:layout_width="130dp"
            android:layout_height="103dp" android:id="@+id/fertilizer_pricetag3"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            app:layout_constraintStart_toStartOf="@+id/main_background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/fertilizer_pricetag" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/pesticide_pricetag" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:contentDescription="@string/pricetag_icon_description"
            android:text="160"
            android:layout_width="130dp"
            android:layout_height="103dp" android:id="@+id/pesticide_pricetag"
            android:background="@drawable/icon_price_tag"
            android:gravity="center|center_horizontal"
            app:layout_constraintStart_toStartOf="@+id/main_background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.658"
            android:textSize="30sp"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            android:layout_marginTop="144dp" app:layout_constraintTop_toBottomOf="@+id/fertilizer_pricetag"
            app:layout_constraintBottom_toTopOf="@+id/navbar" app:layout_constraintVertical_bias="0.083"/>
    <ImageButton
            android:contentDescription="@string/pesticide_image_icon_description"
            android:layout_width="90dp"
            android:layout_height="95dp" android:id="@+id/purchase_pesticide"
            android:background="@drawable/pesticide"
            android:layout_marginTop="148dp" app:layout_constraintTop_toBottomOf="@+id/purchase_fertilizer"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.647"/>
    <ImageButton
            android:contentDescription="@string/seeds_icon_description"
            android:layout_width="120dp"
            android:layout_height="117dp" android:id="@+id/imageButton22"
            android:background="@drawable/seeds_cf_celosia"
            app:layout_constraintTop_toBottomOf="@+id/purchase_fertilizer"
            app:layout_constraintBottom_toTopOf="@+id/purchase_pesticide" app:layout_constraintVertical_bias="0.258"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.189"/>
    <ImageView
            android:contentDescription="@string/coin_image_icon_description"
            android:src="@drawable/icon_coin"
            android:layout_width="69dp"
            android:layout_height="67dp" android:id="@+id/imageView7"
            app:layout_constraintBottom_toTopOf="@+id/shelves_background"
            app:layout_constraintTop_toTopOf="@+id/main_background"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/main_background"
            app:layout_constraintBottom_toTopOf="@+id/shelves_background"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintVertical_bias="0.39"
            android:fontFamily="@font/pixelify_sans" android:textColor="@color/black"
            android:layout_marginStart="184dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>