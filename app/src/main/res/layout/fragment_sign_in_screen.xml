<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SignInFragment"
        android:id="@+id/SignInScreenFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sign_in_screen_background"
            android:id="@+id/sign_in_screen_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

    <EditText
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:inputType="text"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/sign_in_screen_email"
            android:background="@drawable/edit_text_background"
            android:padding="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_screen_logo"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pixelify_sans"
            android:textSize="25sp"
            android:textColor="#FFFBFB" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/sign_in_screen_logo"
            android:id="@+id/sign_in_screen_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" />

    <EditText
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:inputType="text|textVisiblePassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/sign_in_screen_password"
            android:background="@drawable/edit_text_background"
            android:padding="25dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_screen_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sign_in_screen_background"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/pixelify_sans"
            android:textSize="25sp"
            android:textColor="#FFFBFB" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:id="@+id/sing_in_screen_sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_screen_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@null"
            android:text="@string/sign_in_sign_in"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/sign_in_flow_button"
            android:fontFamily="@font/pixelify_sans"
            android:textSize="25sp" />

    <TextView
            android:text="@string/sign_in_screen_need_an_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:fontFamily="@font/pixelify_sans"
            android:textSize="24sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/sing_in_screen_sign_in_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="@string/sign_up_screen_sign_up_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/sing_in_screen_sign_in_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pixelify_sans"
            android:textSize="24sp"
            android:textColor="#007BB8"
            android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>